<%= form_for @post do |f| %>
  <div class="form-control">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="form-control">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="form-control">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>

  <div class="form-control">
    <%= f.label :menu_label %>
    <%= f.text_field :menu_label %>
  </div>

  <div class="form-control">
    <%= f.label :h1 %>
    <%= f.text_field :h1 %>
  </div>

  <div class="form-control">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="form-control">
    <%= f.label :priority %>
    <%= f.text_field :priority %>
  </div>

  <div class="form-control">
    <%= f.label :published_at %>
    <%= f.datetime_field :published_at %>
  </div>

  <%= f.error_messages %>

  <div class="form-control">
    <%= f.submit "Save" %>
  </div>

  <div class="form-control">
    <%= link_to "Cancel", posts_path %>
  </div>

<% end %>