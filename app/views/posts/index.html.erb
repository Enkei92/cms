<input type="button" id="toggle" value="Show unpublished" />
<div id="published_posts">
  <h1> Posts </h1>
  <% @posts.published.each do |post| %>
    <p><%= link_to post.menu_label, post_path(slug: post.slug) %></p>
  <% end %>
</div>

<div id="unpublished_posts" class="hidden">
  <h1> Unpublished posts </h2>
  <% @posts.unpublished.each do |post| %>
    <p><%= link_to post.menu_label, post_path(slug: post.slug) %></p>
  <% end %>
</div>
